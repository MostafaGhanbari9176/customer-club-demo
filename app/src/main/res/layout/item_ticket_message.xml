<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtQuestionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/normal_border"
        android:padding="4dp"
        android:text="TextView"
        android:textColor="@color/dark"
        android:textSize="@dimen/txt_small_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quastion_border"

            android:lineSpacingExtra="2sp"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@color/dark"
            android:textSize="@dimen/txt_message_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtAnswerDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/normal_border"
        android:padding="4dp"
        android:text="TextView"
        android:textColor="@color/dark"
        android:textSize="@dimen/txt_small_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/answer_border"
            android:lineSpacingExtra="2sp"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@color/dark"
            android:textSize="@dimen/txt_message_size" />
    </LinearLayout>

</LinearLayout>