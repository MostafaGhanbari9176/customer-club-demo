<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="افزودن تیکت جدید"
                android:textColor="@color/secondaryDarkColor" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp">

                <EditText

                    android:id="@+id/txtSubjectTicketDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/input_text_border"
                    android:ems="150"
                    android:inputType="textMultiLine"
                    android:padding="16dp"
                    android:textColor="@color/dark"
                    android:textColorHint="@color/light_three" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@color/light_one"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:text="عنوان تیکت"
                    android:textColor="@color/secondaryColor"
                    android:textSize="@dimen/txt_small_size" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp">

                <EditText

                    android:id="@+id/txtQuestioDialogTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/input_text_border"
                    android:ems="150"
                    android:inputType="textMultiLine"
                    android:minHeight="100dp"
                    android:padding="16dp"
                    android:textColor="@color/dark"
                    android:textColorHint="@color/light_three" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@color/light_one"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:text="متن سوال خودرا وارد کنید"
                    android:textColor="@color/secondaryColor"
                    android:textSize="@dimen/txt_small_size" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnConfirmDialogTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_defult"
                    android:text="ثبت"
                    android:textColor="@color/light_one" />

                <Button
                    android:id="@+id/btnCancelDialogTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_defult"
                    android:text="انصراف"
                    android:textColor="@color/light_one" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>